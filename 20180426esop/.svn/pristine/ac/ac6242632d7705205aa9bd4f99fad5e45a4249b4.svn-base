.over-hid{ overflow:hidden;}
.input{ width:60%; line-height:30px; height:30px;color:#000; padding-left:10px; border:solid 1px #e2e2e2; background:#fff;}
.grid-form-label{ color:#666; width:30%; text-align:right; display:inline-block; display:inline-block;}
.data-input{ background:#fff url(../images/rili-icon.png) no-repeat 95% center;}
.grid-form-setion{ float:left; width:33.3%; text-align:center; margin:10px 0;}
.grid-form-box{ overflow:hidden;}
.grid-from-button button{ display:inline-block;font-size:14px; color:#fff; padding:2px 15px; margin-right:20px; border-radius:5px; border:none;}
.grid-from-button button:hover,.grid-from-icon a:hover{opacity: 0.8;filter:alpha(opacity=80);}
.btn-blue{ background:#00adf5;}
.btn-gray{background:#d1d1d2;}
.text-center{ text-align:center;}
.grid-from-icon{ position:relative; top:3px;}
.grid-from-icon a{ display:inline-block; width:17px; height:17px; margin:0 5px;}
.icon-export{ background:#fff url(../images/icon-export.png) no-repeat center center;}
.icon-print{ background:#fff url(../images/icon-print.png) no-repeat center center;}
.slide-btn{ width:40px; height:9px; margin:5px auto; background:url(../images/slide-up.png) no-repeat center center; cursor:pointer;}
.slide-btn.on{background:url(../images/slide-down.png) no-repeat center center;}
.slide-box{ border:solid 1px #f5f5f5; background:url(../images/slide-box-bg.png) repeat-x 0 center;}